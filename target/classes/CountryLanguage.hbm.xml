<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="retired.CountryLanguageRetired" table="countryLanguage">

        <meta attribute="class description">
            This class contains country language details.
        </meta>

        <id name="countryCode" type="string" column="CountryCode">
        </id>

        <property name="language" column="Language" type="string"/>
        <property name="boolOfficial" column="IsOfficial" type="true_false"/>
        <property name="percentage" column="Percentage" type="double"/>
    </class>
</hibernate-mapping>